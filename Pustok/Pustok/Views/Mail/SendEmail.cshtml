@model MailRequest

@{
    Layout = "_AdminLayout";
}
;


@section custom_plugings{
    <link href="~/admin/assets/plugins/select/selectr.min.css" rel="stylesheet" type="text/css" />
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <p class="text-muted mb-0">Send Email.</p>
        </div><!--end card-header-->
        <div class="card-body">
            <form asp-route="send-email" method="POST">
                <div class="form-group">
                    <label asp-for="Name">Email:</label>
                    <input asp-for="ReceiverMail" type="text" class="form-control"  placeholder="Enter receiver's mail'">
                </div>
              

                <div class="form-group">
                    <label asp-for="Body">Body:</label>
                    <input asp-for="Body" type="text" class="form-control" placeholder="Enter subject'">
                </div>

                <div class="form-group">
                    <label asp-for="Subject">Subject:</label>
                    <input asp-for="Subject" type="text" class="form-control" placeholder="Enter subject'">
                </div>

                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div><!--end card-body-->
    </div><!--end card-->
</div>